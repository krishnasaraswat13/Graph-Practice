class Solution {

    public void helper(int s,int[][] isConnected,boolean visited[]){
        visited[s]=true;
        for(int i=0;i<isConnected.length;i++){
            if(isConnected[s][i]==1 && !visited[i]){
                helper(i,isConnected,visited);
            }
        }
    }
    public int findCircleNum(int[][] isConnected) {
        boolean visited[]=new boolean[isConnected.length];
        int res=0;
        int count = 0;
        for (int i = 0; i < isConnected.length; i++) {
            if (!visited[i]) {
                helper(i, isConnected, visited);
                count++;
            }
        }
        return count;
        
    }
}